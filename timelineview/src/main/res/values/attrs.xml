<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimelineView">
        <attr name="marker" format="color|reference" />
        <attr name="markerSize" format="dimension" />
        <attr name="markerMargin" format="dimension" />
        <attr name="markerInCenter" format="boolean" />
        <attr name="lineType" format="enum">
            <enum name="begin" value="0" />
            <enum name="middle" value="1" />
            <enum name="end" value="2" />
            <enum name="only" value="3" />
        </attr>
        <attr name="lineOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="lineStyle" format="enum">
            <enum name="solid" value="0" />
            <enum name="dashed" value="1" />
        </attr>
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="dashWidth" format="dimension" />
        <attr name="dashGap" format="dimension" />
    </declare-styleable>
</resources>